<?xml version="1.0"?>

<LinearLayout android:paddingTop="10dp" android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/response"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="50dp"/>

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/prodrec"/>








    <TableLayout
        android:id="@+id/eventTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        -<TableRow>

        <TextView android:padding="3dip" android:text="Event Name:"/>

        <EditText
            android:id="@+id/eventID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="150dip"
            android:visibility="gone" />
        <EditText
            android:id="@+id/eventName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="150dip" />


    </TableRow>
        -<TableRow>

        <TextView
            android:id="@+id/datedate"
            android:padding="10dip"
            android:text="Date:" />
        <DatePicker
            android:id="@+id/eventDate"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:datePickerMode="spinner"
            android:calendarViewShown="false"/>


    </TableRow>
        -<TableRow>

        <TextView
            android:id="@+id/timetime"
            android:padding="10dip"
            android:text="Time:" />
        <TimePicker
            android:id="@+id/eventTime"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:timePickerMode="spinner"/>


    </TableRow>
        -<TableRow>

        <TextView android:padding="10dip" android:text="Location:"/>

        <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/eventLocation" android:minWidth="50dip"/>

    </TableRow>
        -<TableRow>

        <TextView android:padding="10dip" android:text="Flagged:"/>

        <TextView
            android:id="@+id/flag"
            android:padding="10dip"
            android:text="" />


    </TableRow>
        <Button
            android:id="@+id/createEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="createEvent"
            android:padding="3dip"
            android:text="Create Event" />
    </TableLayout>











    <TableLayout
        android:id="@+id/taskTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        -<TableRow>

        <TextView android:padding="3dip" android:text="Task Name:"/>

        <EditText
            android:id="@+id/taskID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="150dip"
            android:visibility="gone" />
        <EditText
            android:id="@+id/taskName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="150dip" />

    </TableRow>
        -<TableRow>

        <TextView android:padding="10dip" android:text="Location:"/>

        <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/location" android:minWidth="50dip"/>

    </TableRow>
        -<TableRow>

        <TextView android:padding="10dip" android:text="Status:"/>

        <Spinner android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/status"/>

    </TableRow>
        <Button
            android:id="@+id/createTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="createTask"
            android:padding="3dip"
            android:text="Create Task" />
    </TableLayout>







    -<TableLayout android:paddingTop="10dp" android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/add_table">





    -<TableRow>

    <TextView android:padding="3dip" android:text="First Name:"/>

    <EditText
        android:id="@+id/idmee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="150dip"
        android:visibility="gone" />
    <EditText
        android:id="@+id/fn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="150dip" />

    <ImageView
        android:id="@+id/usrImg"
        android:layout_width="200px"
        android:layout_height="200px"
        android:src="@drawable/img1" >
    </ImageView>

</TableRow>


    -<TableRow>

    <TextView android:padding="10dip" android:text="Last Name:"/>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/ln" android:minWidth="50dip"/>

</TableRow>



    -<TableRow>

    <TextView android:padding="10dip" android:text="Gender:"/>

    <Spinner android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/spinner1"/>

</TableRow>
    -<TableRow>

    <TextView android:padding="10dip" android:text="Age:"/>

    <EditText android:inputType="number" android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/age" android:minWidth="50dip"/>

</TableRow>
    -<TableRow>

    <TextView android:padding="10dip" android:text="Address:"/>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/address" android:minWidth="50dip"/>

</TableRow>
    -<TableRow>

    <TextView android:padding="10dip" android:text="Image Number:"/>

    <EditText android:inputType="number" android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/imggg" android:minWidth="50dip"/>


</TableRow>


    -<TableRow>

    <Button
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="updateRec"
        android:padding="3dip"
        android:text="Add Friend" />

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dip"
        android:text="Cancel" />

</TableRow>


</TableLayout >

    <LinearLayout
        android:id="@+id/imgLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgChoose1"
            android:layout_width="200px"
            android:layout_height="200px"
            android:onClick="setImg1"
            android:src="@drawable/img1"></ImageView>

        <ImageView
            android:id="@+id/imgChoose2"
            android:layout_width="200px"
            android:layout_height="200px"
            android:onClick="setImg2"
            android:src="@drawable/img2"></ImageView>

        <ImageView
            android:id="@+id/imgChoose3"
            android:layout_width="200px"
            android:layout_height="200px"
            android:onClick="setImg3"
            android:src="@drawable/img3"></ImageView>

        <ImageView
            android:id="@+id/imgChoose4"
            android:layout_width="200px"
            android:layout_height="200px"
            android:onClick="setImg4"
            android:src="@drawable/img4"></ImageView>
    </LinearLayout>

    <Button
        android:id="@+id/Save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="updateRec"
        android:padding="3dip"
        android:text="Save Edit" />
    <Button
        android:id="@+id/saveTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="updateTask"
        android:padding="3dip"
        android:text="Save Task" />

    <Button
        android:id="@+id/Del_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="delRec"
        android:padding="3dip"
        android:text="Delete Friend" />
    <Button
        android:id="@+id/deleteTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="delTask"
        android:padding="3dip"
        android:text="Delete Task" />

    <ListView
        android:id="@+id/list1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></ListView>

    <TextView
        android:id="@+id/TextNotComplete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not Completed"
        android:textStyle="bold|italic"></TextView>
    <ListView
        android:id="@+id/listTasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        ></ListView>

    <TextView
        android:id="@+id/TextComplete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Completed"
        android:textStyle="bold|italic"></TextView>
    <ListView
        android:id="@+id/listTasks2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></ListView>
    <ListView
        android:id="@+id/listEvents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></ListView>

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:onClick="Submit"
        android:text="Delete Events" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <Button
                android:id="@+id/prevB"
                android:layout_width="130dp"
                android:layout_height="47dp"
                android:onClick="previous"
                android:text="Previous Page"
                android:textAlignment="center"
                android:layout_marginTop="10dp"/>
            <Button
                android:id="@+id/homee"
                android:layout_width="130dp"
                android:layout_height="47dp"
                android:onClick="home"
                android:text="Home"
                android:textAlignment="center"
                android:layout_marginTop="10dp"/>
        </TableRow>

    </TableLayout>

</LinearLayout>
